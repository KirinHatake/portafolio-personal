---
interface Props {
    headerTitle?: string;
    headerText?: string;
    headerIntro?: string;
}
const {headerTitle, headerText, headerIntro} = Astro.props;
---
<head>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Jersey+10&family=Lobster&display=swap" rel="stylesheet">
   
    
</head>

<header id={"header"}>
   
<h1>{headerTitle}</h1>

<article class="header-content">
    <h2>{headerIntro} </h2> 
    <p>{headerText}</p>
</article>

  


</header>


<style>
    #header{
        display: flex;
        flex-direction: column;
        
        align-items: center;
        margin: 10px;
        background-color: #34052A;
        box-shadow: -5px 6px 15px 6px rgba(0,0,0,0.81);
        padding: 15px;
        border-radius: 10px;
    }

    .header-content {
        display: flex;
        margin-top: 20px;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        text-align: center;
        max-width: 600px;
    }

    h1 {
        
        font-size: 2.5rem;
        margin: 0px 0px 0px 0px;
        font-family: "Jersey 10", sans-serif;
        font-weight: 400;
        font-style: normal;
        align-self: self-start;
    }

    h2 {
        font-size: 2.8rem;
        margin: 0;
        font-family: "Titan One", sans-serif;
        font-weight: 900;
        font-style: normal;
        color: #fff;
    }

    p {
        font-size: 0.8rem;
        color: #ccc;
    }
</style>